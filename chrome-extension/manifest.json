{
    "name": "Better Image Descriptions",
    "description": "Detect missing and insufficient image descriptions and get tips how to improve them.",
    "manifest_version": 2,
    "version": "1.0.5",
    "author": "Michael Scharnagl",
    "icons": {
        "16": "icons/icon-16x16.png",
        "32": "icons/icon-32x32.png",
        "48": "icons/icon-48x48.png",
        "128": "icons/icon-128x128.png"
    },

    "permissions": [
        "activeTab"
    ],

    "browser_action": {
        "default_icon": "icons/icon-32x32.png",
        "default_title": "Better image Description",
        "default_popup": "popup/popup.html"
    },
    "web_accessible_resources": ["/content_scripts/content.css", "/content_scripts/icons/*.svg"]
}